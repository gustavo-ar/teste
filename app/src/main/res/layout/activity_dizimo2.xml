<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dizimo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFormulario">

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="Formulário de Dizimista"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Preencha o formulário abaixo com seus dados, caso tenha interesse em se tornar dizimista."
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText16"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:background="@color/colorCampoFormulario"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText19"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorCampoFormulario"
            android:ems="10"
            android:hint="Data de Nascimento"
            android:inputType="date"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText21"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorCampoFormulario"
            android:ems="10"
            android:hint="CPF"
            android:inputType="number"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:text="Estado Civil"
            android:textColor="@color/colorPrimaryDarkDespesa"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/sp_estado_civil"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:background="@color/colorWhite"/>

        <EditText
            android:id="@+id/editText18"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorCampoFormulario"
            android:ems="10"
            android:hint="Endereço"
            android:inputType="text"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText23"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorCampoFormulario"
            android:ems="10"
            android:hint="Bairro"
            android:inputType="text"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText24"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorCampoFormulario"
            android:ems="10"
            android:hint="Cidade"
            android:inputType="text"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText29"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorCampoFormulario"
            android:ems="10"
            android:hint="Estado"
            android:inputType="text"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText22"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorCampoFormulario"
            android:ems="10"
            android:hint="Profissão"
            android:inputType="text"
            android:padding="10dp" />

    </LinearLayout>
</ScrollView>
